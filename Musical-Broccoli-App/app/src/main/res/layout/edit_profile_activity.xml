<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="900dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_header_image" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:backgroundTint="#ffffff"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logotourstop" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#0033cc"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="User Name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1300dp"
        android:layout_marginTop="328dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:   *"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:hint="  Enter Name"
            android:id="@+id/editText2"
            android:background="@drawable/textfields"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:   *"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/editText2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="112dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@drawable/textfields"
            android:id="@+id/editText3"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:hint="  Enter E-Mail"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cell Phone:"
            android:id="@+id/textView9"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:inputType="phone"
            android:ems="10"
            android:hint="  Enter Cell Phone"
            android:background="@drawable/textfields"
            android:id="@+id/editText11"
            android:layout_below="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Password"
            android:textColor="@color/darkblue"
            android:id="@+id/textView10"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/editText11"
            android:layout_alignStart="@+id/editText11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Payment Method"
            android:textColor="@color/darkblue"
            android:id="@+id/textView11"
            android:layout_marginTop="47dp"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <Button
            android:background="@android:drawable/toast_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:id="@+id/button2"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/textView11"
            android:layout_alignEnd="@+id/editText11" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="All fields marked with * are mandatory"
            android:id="@+id/textView19"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignEnd="@+id/textView9" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
